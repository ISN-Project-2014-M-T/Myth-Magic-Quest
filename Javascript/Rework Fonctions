#Programme de combat#

<html>

<head>

<script type="text/javascript">

function Alea()
{
    var random = Math.floor((Math.random() * 6) + 1);

    return Math.floor(random);
}

function Level(zone)
{
    if(zone==5)
    {
        var n='boss1';
        var v=1000;
        var t=0.40;
    }
    else if(zone==10)
    {
        var n='boss2';
        var v=2000;
        var t=0.60;
    }
    else if(zone==15)
    {
        var n='boss3';
        var v=3000;
        var t=0.80;
    }
    else if(zone==20)
    {
        var n='boss4';
        var v=4000;
        var t=1;
    }
    else if(zone<5)
    {
        var n='Lv1';
        var v=100;
        var t=0.20;
    }
    else if(5<zone<10)
    {
        var n='Lv2';
        var v=200;
        var t=0.40;
    }
    else if(10<zone<15)
    {
        var n='Lv3';
        var v=300;
        var t=0.60;
    }
    else if (15<zone<20)
    {
        var n='Lv4';
        var v=400;
        var t=0.80;
    }
    return[n, v, t];
}


function combat(zone,life)
{

// Attribution des variables :

//Stats du monstre
var zoning = Level(zone)
var monster = zoning[0]
var pv = zoning[1]
var fail = zoning[2]

//Lancer de dÃ©s et coup critique
var r = Alea();
var h = Alea();

if (h==7)
{
    var u = 5;
}
else var u = 1;


    // Stats du joueur
    var PlayerLife = 5000;
    var a = Alea();
    var b = Alea();
    var c = Alea();
    var total = (a+b+c)*10*a;
    var x = Alea();
    var y = Alea();
    var z = Alea();
    var total2 = (x+y+z)*10*fail*a;
    var result1 = PlayerLife - total2;
    var result2 = pv - total;



while(pv>0 || PlayerLife>0)
{
    alert("Player 1" + "           Enemy " + monster);
    alert("Pv : " + PlayerLife, "         Pv : " + pv);
    if(u == 1)
    {
        alert("Attack Damage : " + a + " " + b + " " + c + " =>" + total);
        alert("Damages Received : " + x + " " + y + " " + z + " =>" + total2);
    }
    else if(u == 5)
    {
        alert("Attack Damage : " + a + " " + b + " " + c + " =>" + total + "Cout Critique!!!");
        alert("Damages Received : " + x + " " + y + " " + z + " =>" + total2 + "Cout Critique!!!");
    }
    alert("");
    alert("");
    var PlayerLife = result1;
    var pv = result2;
}
if(pv <= 0)
{
    var pv = 0;
    alert("Player 1" + "           Enemy " + monster);
    alert("Pv : " + PlayerLife + "         Pv : " + pv);
    alert("YOU WIN!");
}
else if(PlayerLife <= 0)
{
    var PlayerLife = 0;
    alert("Player 1" + "           Enemy " + monster);
    alert("Pv : " + PlayerLife + "         Pv : " + pv);
    alert("YOU LOSE!");
}

}

</script>

     </head>
     <body>
        
          <p>
               <a href="#" onclick="javascript:combat(7,650)">Lancer le combat</a><br />
